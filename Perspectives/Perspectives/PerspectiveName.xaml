<Window x:Class="AdamDriscoll.Perspectives.PerspectiveName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Perspective Name" Height="109" Width="523">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBlock Padding="5,5,5,5" VerticalAlignment="Center">Name</TextBlock>
            <TextBox x:Name="txtName" Margin="5,5,5,5" Width="300"></TextBox>    
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Margin="5,5,5,5" Padding="3,3,3,3" HorizontalAlignment="Right" Click="Ok_Click">Ok</Button>
            <Button Margin="5,5,5,5" Padding="3,3,3,3" HorizontalAlignment="Right" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
         
    </Grid>
</Window>
